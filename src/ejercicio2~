#!/usr/bin/python
#! encoding: UTF-8
#crear fichero con 
import moduloerror
import sys
def fichero(nombre):
  fichero=fopen(nombre,"wt")
  nro_test=(10,100,1000,100000,1000000)
  umbral={0.1,0.01,0.001,0.0001,0.000001}
  for nro_test in umbral:
    h=moduloerror.error(nro_test)
    return h
  fichero.close

#invocacion
if __name__ == "__main__":
  if len(sys.argv)==2:
    fichero.nombre=str(sys.argv[1])
  else:
    fichero.nombre=str(raw_input('Introduzca el nombre del fichero: '))
  t=fichero(nombre)
  print t
